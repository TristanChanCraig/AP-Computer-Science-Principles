#include <iostream>
#include <math.h>
#include <stdio.h>
#include <vector>
using namespace std;

int main() {
    vector<double> xcoords;
    vector<double> ycoords;
    cout << "Number of vertices: ";
    int numVert = 0;
    cin >> numVert;

    for (size_t i = 0; i < numVert; i++)
    {
        cout << "X" << i+1 << ": ";
        double x;
        cin >> x;
