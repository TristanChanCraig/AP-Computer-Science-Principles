    }

    double area;
    for (size_t i = 0; i < numVert-1; i++)
    {
        area += (xcoords[i] * ycoords[i+1]) - (xcoords[i+1] * ycoords[i]);
    }
    area += (xcoords[numVert-1] * ycoords[0) - (xcoords[0] * ycoords[numVert]);
    cout << "The area of the polygon is: " << area;
}